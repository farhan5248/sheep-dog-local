{
  "name": "mydsl-language-extension",
  "displayName": "MyDsl Language Support",
  "description": "Language support for MyDsl files",
  "version": "1.0.0",
  "publisher": "mydsl-publisher",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "mydsl",
    "xtext",
    "language-server"
  ],
  "activationEvents": [
    "onLanguage:mydsl"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "mydsl",
        "aliases": [
          "MyDsl",
          "mydsl"
        ],
        "extensions": [
          ".mydsl"
        ],
        "configuration": "./mydsl.configuration.json",
        "icon": {
          "light": "./icons/mydsl-icon.svg",
          "dark": "./icons/mydsl-icon.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "mydsl",
        "scopeName": "source.mydsl",
        "path": "./syntaxes/mydsl.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "mydsl.generateBoilerplate",
        "title": "Generate MyDsl Boilerplate",
        "category": "MyDsl"
      },
      {
        "command": "mydsl.generateTests",
        "title": "Generate Tests from MyDsl",
        "category": "MyDsl"
      },
      {
        "command": "mydsl.formatDocument",
        "title": "Format MyDsl Document",
        "category": "MyDsl"
      },
      {
        "command": "mydsl.validateAllFiles",
        "title": "Validate All MyDsl Files",
        "category": "MyDsl"
      },
      {
        "command": "mydsl.helloWorld",
        "title": "Hello World",
        "category": "MyDsl"
      }
    ],
    "keybindings": [
      {
        "command": "mydsl.generateBoilerplate",
        "key": "ctrl+alt+g",
        "when": "editorLangId == mydsl"
      },
      {
        "command": "mydsl.generateTests",
        "key": "ctrl+alt+t",
        "when": "editorLangId == mydsl"
      },
      {
        "command": "mydsl.formatDocument",
        "key": "shift+alt+f",
        "when": "editorLangId == mydsl"
      },
      {
        "command": "mydsl.validateAllFiles",
        "key": "ctrl+alt+v"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorLangId == mydsl",
          "command": "mydsl.generateBoilerplate",
          "group": "mydsl"
        },
        {
          "when": "editorLangId == mydsl",
          "command": "mydsl.generateTests",
          "group": "mydsl"
        },
        {
          "when": "editorLangId == mydsl",
          "command": "mydsl.formatDocument",
          "group": "mydsl"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceExtname == .mydsl",
          "command": "mydsl.generateTests",
          "group": "mydsl"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "MyDsl Language Server",
      "properties": {
        "mydsl.languageServer.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable the MyDsl language server"
        },
        "mydsl.languageServer.port": {
          "type": "number",
          "default": 5007,
          "description": "Port for the MyDsl language server"
        },
        "mydsl.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        },
        "mydsl.formatting.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable custom MyDsl formatting"
        },
        "mydsl.validation.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable MyDsl validation"
        },
        "mydsl.boilerplate.template": {
          "type": "string",
          "default": "// MyDsl Boilerplate File\nHello World!\nHello Claude!\nHello VSCode!",
          "description": "Template content for new MyDsl files"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.19.11",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^8.28.0",
    "typescript": "^5.9.2",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "vscode-languageclient": "9.0.1"
  }
}
